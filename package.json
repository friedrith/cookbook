{
  "name": "cookbook",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@headlessui/react": "^1.6.2",
    "@heroicons/react": "latest",
    "@notionhq/client": "^1.0.4",
    "@reduxjs/toolkit": "^1.8.1",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.188",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-helmet": "^6.1.5",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "clsx": "^1.2.1",
    "file-saver": "^2.0.5",
    "firebase": "^9.8.1",
    "fuse.js": "^6.6.2",
    "i18next": "^21.8.3",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.1.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.16.9",
    "react-input-autosize": "^3.0.0",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-scroll-parallax": "^3.3.1",
    "react-tag-input": "^6.8.0",
    "react-textarea-autosize": "^8.3.4",
    "react-tooltip": "^4.4.3",
    "typescript": "^4.4.2",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "serve": "npx serve -s build",
    "lint": "eslint --max-warnings=0 .",
    "lint:translation": "eslint --max-warnings=0 ./public/locales/**/*.json",
    "format": "prettier --check ."
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "react-app",
      "react-app/jest",
      "plugin:jsx-a11y/recommended",
      "plugin:i18next/recommended",
      "plugin:i18n-json/recommended"
    ],
    "plugins": [
      "prettier",
      "jsx-a11y",
      "i18next"
    ],
    "rules": {
      "i18n-json/sorted-keys": "off",
      "i18n-json/valid-message-syntax": "off",
      "i18n-json/identical-keys": [
        2,
        {
          "filePath": {
            "fr/default.json": "../../../../public/locales/en/default.json",
            "fr/faq.json": "../../../../public/locales/en/faq.json",
            "en/default.json": "../../../../public/locales/fr/default.json",
            "en/faq.json": "../../../../public/locales/fr/faq.json"
          }
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*"
        ],
        "rules": {
          "i18next/no-literal-string": 0
        }
      }
    ]
  },
  "eslintIgnore": [
    "build",
    "node_modules"
  ],
  "simple-git-hooks": {
    "pre-commit": "yarn lint && yarn format && yarn:translation && yarn test --watchAll=false && yarn build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@types/file-saver": "^2.0.5",
    "@types/react-input-autosize": "^2.2.1",
    "@types/react-tag-input": "^6.1.3",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-i18n-json": "^4.0.0",
    "eslint-plugin-i18next": "next",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "simple-git-hooks": "^2.8.0",
    "tailwindcss": "^3.0.24"
  },
  "packageManager": "yarn@3.2.3"
}
